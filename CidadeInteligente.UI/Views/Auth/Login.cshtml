@{
    this.ViewData["Title"] = "Login";
    this.TempData["ignoreFooter"] = true;
}

<style>
    .main {
        width: 100vw;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center
    }

    .img-logo-cidade {
        text-align: center;
        margin-bottom: 1em
    }

    .img-logo-cidade img {
        width: 100px
    }

    .form {
        padding: 10px
    }

    .forget-password {
        color: rgb(61, 61, 61)
    }

    .forget-password:hover {
        cursor: pointer
    }

    .form-input {
        padding-left: 40px;
        width: 100%;
        line-height: 1.2;
        height: 40px;
        outline: none;
        border: none;
        background: none;
        border-bottom: solid 1px rgb(61, 61, 61);
        color: rgb(61, 61, 61)
    }

    .form-input:focus {
        padding-left: 40px;
        width: 100%;
        line-height: 1.2;
        height: 40px;
        outline: none;
        border: none;
        background: none;
        border-bottom: solid 1px #7d0c0f;
        color: #7d0c0f
    }

    .form-input::placeholder {
        color: rgb(61, 61, 61)
    }

    .inputIcon {
        position: relative
    }

    .inputIcon i {
        position: absolute;
        left: 0;
        top: 0px;
        padding: 9px 8px;
        color: rgb(61, 61, 61);
        transition: .3s
    }

    .inputIcon input:focus+i {
        color: #7d0c0f
    }

    .limiter {
        width: 100%;
        margin: 0 auto
    }

    .container-login100 {
        width: 100%;
        min-height: 100vh;
        display: -webkit-box;
        display: -webkit-flex;
        display: -moz-box;
        display: -ms-flexbox;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        background-image: url(../img/loginBackground.jpg);
        align-items: center;
        padding: 15px;
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        position: relative;
        z-index: 1
    }

    .container-login100::before {
        content: "";
        display: block;
        position: absolute;
        z-index: -1;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background-color: rgba(255, 255, 255, 0.795)
    }

    .painel {
        width: 70%;
        margin-left: auto;
        margin-right: auto;
        margin-top: 0;
        background: rgb(231, 231, 231);
        padding: 25px;
        box-shadow: 0 0 1em rgba(0, 0, 0, 0.315)
    }

    @@media screen and (max-width: 600px) {
        .painel {
            width: 96%
        }
    }
</style>

<div class="limiter">
    <div class="container-login100">
        <div class="main">
            <div class="container">
                <div class="row justify-content-center align-items-center">
                    <div class="col-12 col-md-5 painel">
                        <div class="img-logo-cidade"><img src="~/img/iconAuth.png"></div>
                        <h3 class="text-center title mb-3">Login</h3>
                        <form id="formulario" class="form">
                            <div class="inputIcon">
                                <input type="email" name="email" class="form-input" aria-describedby="emailHelp" placeholder="Digite o email">
                                <i class="mdi mdi-email-check"></i>
                            </div>
                            <div class="inputIcon mt-3">
                                <input type="password" name="password" class="form-input" placeholder="Digite a sua senha">
                                <i class="mdi mdi-key"></i>
                            </div>
                        </form>
                        <button type="button" class="btn mb-2 btn-block btn-strong-red btn-login">Entrar</button>
                        <div class="text-center font-weight-bold mt-3">&copy; @DateTime.Now.Year</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(() => {
        $(".btn-login").click(async () => {
            formHasEmptyField($("form").serializeArray());

            sweetAlertAwait("Fazendo login...");
            const { status, body } = await restAPI.post("auth/login", {
                email: $("input[name=email]").val().trim(),
                password: $("input[name=password]").val().trim()
            });
            toggleExitConfirmation(false);

            switch (status) {
                case 204:
                    sweetAlert("success", "Login efetuado!").then(({ value }) => value && $(location).attr("href", "/"));
                    break;
                case 400:
                    handleBadRequest(body);
                    break;
                case 404:
                    sweetAlert("error", "E-mail e/ou senha não coincidem!");
                    break;
                default:
                    sweetAlert("error", "Um erro desconhecido ocorreu durante o seu login!");
                    break;
            }
        });
    });
</script>